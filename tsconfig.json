{
    "compilerOptions": {
        "target": "ES2022",
        "module": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "allowImportingTsExtensions": false,
        "noEmit": false,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "declaration": true,
        "moduleResolution": "node",
        "lib": [
            "ES2022",
            "DOM"
        ],
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}